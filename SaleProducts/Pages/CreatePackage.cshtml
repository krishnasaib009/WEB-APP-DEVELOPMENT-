@page
@model SaleProducts.Pages.PackagesModel
@{
    Layout = "_Layout";
}
<head>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.13.1/font/bootstrap-icons.min.css">
    <style>
        .card-header h5 {
            color: #d36c9f;
        }

        .table th,
        .table td {
            vertical-align: middle !important;
            text-align: center;
        }

        .table th {
            background-color: #343a40;
            color: #fff;
        }

        .btn-print {
            border-radius: 8px;
            margin-bottom: 15px;
            float: right;
        }

        h2.package-title {
            color: orangered;
            text-align: center;
            margin-top: 20px;
            margin-bottom: 20px;
        }

        .edit-btn,
        .btn-danger {
            border-radius: 10px;
        }

       
    </style>
</head>
                @* --------------------------Bootstrap Modal------------------------------------ *@
<div class="modal fade" id="staticBackdrop" data-bs-backdrop="static" data-bs-keyboard="false" tabindex="-1" aria-labelledby="staticBackdropLabel" aria-hidden="true">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header" style="background-color:lightblue;">
                <h5 class="text-uppercase fw-bold" style="color: palevioletred; text-decoration:blink;">Packages Detailed Form</h5>
                <button type="button" class="btn btn-outline-danger btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>

            <form id="FormData" method="post" asp-page-handler="AddProduct">
                <div class="modal-body">
                    <div class="row">
                        <div class="col-md-3">
                            <label>Package ID</label>
                            <input asp-for="package.PackageId" id="editPackageId"  style="border-radius:4px;" placeholder="AUtofetches Item ID" readonly />
                        </div>
                        <div class="col-md-3">
                            <label>Package Name</label>
                            <input asp-for="package.ProductName" id="editPackageName" type="text" style="border-radius:4px;" placeholder="Enter Item Name" required />
                        </div>
                        <div class="col-md-3">
                            <label>Package Container</label>
                            <input asp-for="package.ContainerName" id="editContainerName" type="text" style="border-radius:4px;" placeholder="Enter Package Container" />
                        </div>
                    </div>
                    <div class="row" style="margin-top:20px;">
                        <div class="col-md-3">
                            <label>Package Quantity</label>
                            <input asp-for="package.Qunatity" id="editQunatity" type="text" style="border-radius:4px;" placeholder="Enter Quantity" required />
                        </div>
                        <div class="col-md-3">
                            <label>Purchased Stock</label>
                            <input asp-for="package.PurchasedStock" id="editPurchasedStock" type="text" style="border-radius:4px;" placeholder="Enter Purchased Stock" required />
                        </div>
                        <div class="col-md-3">
                            <label>Enter Barcode</label>
                            <input asp-for="package.Barcode" id="editBarcode" type="text" style="border-radius:4px;" placeholder="Barcode" required />
                        </div>
                    </div>
                </div>

                <div class="modal-footer">
                       <button type="submit" data-bs-dismiss="modal" style="border-radius:10px;" class="btn btn-outline-danger s-2 px-4">Cancel</button>
                       <button type="submit" style="border-radius:10px;" class="btn btn-outline-success ms-2 px-4">Submit</button>
                </div>
            </form>
        </div>
    </div>
</div>



<div class="container mt-5">
    <div class="card shadow rounded-4">
        <div class="card-header text-center bg-white border-0">
            <h5 class="text-uppercase fw-bold">
                Packages Detailed Form
                <i class="bi bi-plus-circle-fill text-dark fs-3 ms-2" style="cursor: pointer;" data-bs-toggle="modal" data-bs-target="#staticBackdrop"></i>
            </h5>
            <hr style="color: darkred;" />
        </div>

        <div class="card-body">
            <!-- Print All Button -->
            <button type="button" class="btn btn-dark btn-print"  onclick="window.print();">
                <i class="bi bi-printer-fill me-1"></i> Print All
            </button>

            <h2 class="package-title">Package List</h2>

            <table class="table table-bordered table-striped" id="productsTable">
                <thead>
                    <tr>
                        <th><input type="checkbox" id="selectAll" /> Select All</th>
                        <th>Package ID</th>
                        <th>Package Name</th>
                        <th>Package Container</th>
                        <th>Package Quantity</th>
                        <th>Purchased Stock</th>

                        <th>Barcode</th>

                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model.PackageList)
                    {
                        <tr data-id="@item.PackageId"
                            data-name="@item.ProductName"
                            data-container="@item.ContainerName"
                            data-quantity="@item.Qunatity"
                            data-purchased="@item.PurchasedStock"
                            data-barcode="@item.Barcode">
                            <td><input type="checkbox" class="rowCheckbox" /></td>
                            <td>@item.PackageId</td>
                            <td>@item.ProductName</td>
                            <td>@item.ContainerName</td>
                            <td>@item.Qunatity</td>
                            <td>@item.PurchasedStock</td>
                            <td>@item.Barcode</td>
                            <td>
                                <div class="d-flex justify-content-center gap-2">
                                    <form method="post">
                                        <input type="hidden" name="id" value="@item.PackageId" />
                                        <button type="button"
                                                class="btn btn-sm btn-primary edit-btn"
                                                data-id="@item.PackageId"
                                                data-name="@item.ProductName"
                                                data-container="@item.ContainerName"
                                                data-quantity="@item.Qunatity"
                                                data-purchased="@item.PurchasedStock"
                                                data-barcode="@item.Barcode"
                                                data-bs-toggle="modal"
                                                data-bs-target="#staticBackdrop">
                                            <i class="bi bi-pencil me-1"></i>Edit
                                        </button>
                                    </form>

                                    <form method="post">
                                        <input type="hidden" name="id" value="@item.PackageId" />
                                        <button type="submit"
                                                style="border-radius:10px;"
                                                class="btn btn-sm btn-danger"
                                                asp-page-handler="Delete"
                                                onclick="return confirm('Are you sure? You want to delete this product?')">
                                            <i class="bi bi-trash me-1"></i>Delete
                                        </button>
                                    </form>
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
@section scripts{
    <partial name ="_ValidationScriptsPartial"/>
    <script>
        $(document).ready(function(){
                $('#FormData').on('submit',function(e){
                e.preventDefault();
               
                var addformData = $(this).serialize(); // Collect all inputs
                };
                    $.ajax({
                        url: '/CreatePackage/AddProduct', 
                        type: 'POST',
                            data: addformData,
                        success: function (response) {
                            // Close the modal
                                $('#FormData').modal('hide');

                                $('#FormData').modal('clear');
                            // Clear the form
                                $('#FormData')[0].reset();

                            // Add new row to table
                                $('#productsTable tbody').append(`
                            <tr>
                                <td>${response.data.ProductId}</td>
                                <td>${response.data.ProductName}</td>
                                <td>${response.data.ContainerName}</td>
                                <td>${response.data.Qunatity}</td>
                                <td>${response.data.PurchasedStock}</td>
                                <td>${response.data.Barcode}</td>
                            </tr>
                            `);
                        },
                        error: function () {
                            alert("Error saving data.");


                        }
                    });
                });
        });
               $(document).on('click', '.edit-btn', function () {
            const row = $(this).closest('tr');

            $('#editPackageId').val(row.data('id'));
            $('#editPackageName').val(row.data('name'));
            $('#editContainerName').val(row.data('container'));
            $('#editQunatity').val(row.data('quantity'));
            $('#editPurchasedStock').val(row.data('purchased'));
            $('#editBarcode').val(row.data('barcode'));

            // Change modal title and button text
            $('.modal-header h5').text('Edit Package');
            $('#submitButton').text('Update').data('mode', 'edit'); // custom data attribute

            // Open modal
            $('#staticBackdrop').modal('show');
        });

        $('#editForm').on('submit', function (e) {
            e.preventDefault();

            var formData = $(this).serialize();

            $.ajax({
                url: '/Packages?handler=Edit',
                type: 'POST',
                data: formData,
                success: function (response) {
                    $('#editModal').modal('hide');
                    $('#editForm')[0].reset();

                    // OPTIONAL: Update the row in the table dynamically or reload
                    location.reload(); // Quick way to refresh the updated table
                },
                error: function () {
                    alert('Failed to update package.');
                }
            });
        });
    </script>
 }
@page
@model SaleProducts.Pages.PrintModel
@{
    Layout = null; // Remove layout to keep it clean for print
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>Print Table</title>
    <style>
        #print-area {
            font-family: Arial, sans-serif;
            margin: 40px;
        }

        table {
            width: 100%;
            border-collapse: collapse;
        }

        thead {
            background-color: #f2f2f2;
        }

        th, td {
            border: 1px solid #000;
            padding: 10px;
            text-align: left;
        }

        
    </style>
</head>
<body>
    <h2>Product Details</h2>

    @if (Model.Product != null)
    {
        <table>
            <tr>
                <th>Product ID</th>
                <th>Name</th>
                <th>Price</th>
                <th>Packages</th>
                <th>Barcode</th>
            </tr>
            <tr>
                <td>@Model.Product.ProductId</td>
                <td>@Model.Product.ProductName</td>
                <td>@Model.Product.SellingPrice</td>
                <td>@Model.Product.Packages</td>
                <td>@Model.Product.Barcode</td>
            </tr>
        </table>
    }
    else
    {
        <p>No product found.</p>
    }

    <script>
        window.onload = function () {
            window.print();
        };
    </script>
</body>
</html>
